<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/newchampion.css" />
<%- include('../partials/nav') %>

<main>
	<h1>Add Champion</h1>
  <p>Make sure the champion is not on the list
    <select>
      <% champions.forEach(function(champion) { %>
        <option><%= champion.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-champion-form" action="/champions" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input" autocomplete="off" placeholder="i.e. Xayah">
    <button class='btn' type="submit">Add Champion</button>
  </form>
</main>

<%- include('../partials/footer') %>
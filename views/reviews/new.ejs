<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/newreview.css">
<%- include('../partials/nav') %>
<main>
<section>
<% if (user) { %>
  <h2>Add a Review</h2>
  <form action="/reviews" method="POST" autocomplete="off">
    <label>Item Name:</label>
    <input type="text" name="item" autocomplete="off">
    <label>Tier(A-D):</label>
    <input type="text" name="tier" autocomplete="off">
    <label>Notes:</label>
    <textarea class="notes" name="notes" cols="40" rows="5"></textarea>
    <!-- <input class="notes" type="text" name="notes" autocomplete="off"> -->
    <button class="btn" type="submit">Submit Review</button>
  </form>
<% } %>
</section>
</main>



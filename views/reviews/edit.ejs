<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/reviewupdate.css">
<%- include('../partials/nav') %>
<section>
<% if (user) { %>
  <h2>Update Review</h2>
  <form action="/reviews/<%= review._id %>?_method=PUT" method="POST" autocomplete="off">
    <label>Item Name:</label>
    <input type="text" name="item" autocomplete="off" placeholder="i.e. Warmog's armor">
    <label>Tier(A-D):</label>
    <input type="text" name="tier" autocomplete="off" placeholder="insert tier from A-D">
    <label>Notes:</label>
    <textarea class="notes" name="notes" cols="40" rows="5" placeholder="why the item is at it's tier..."></textarea>
    <button class="btn" type="submit">Update Review</button>
  </form>
<% } %>
</section>


<%- include('../partials/footer') %>